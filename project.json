{
    "name": "crud",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/crud/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nrwl/webpack:webpack",
            "outputs": ["{options.outputPath}"],
            "options": {
                "target": "node",
                "compiler": "tsc",
                "outputPath": "dist/packages/crud",
                "main": "packages/crud/src/index.ts",
                "tsConfig": "packages/crud/tsconfig.lib.json",
                "generatePackageJson": true
            }
        },
        "type-check": {
            "executor": "nx:run-commands",
            "outputs": [],
            "options": {
                "commands": ["tsc -p packages/crud/tsconfig.lib.json --noEmit", "tsc -p packages/crud/tsconfig.spec.json --noEmit"],
                "parallel": true
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/crud/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/crud/jest.config.ts",
                "passWithNoTests": true,
                "codeCoverage": true
            }
        },
        "sonar": {
            "executor": "nx:run-commands",
            "outputs": ["{workspaceRoot}/sonarqube"],
            "options": {
                "command": "node packages/crud/sonar-project.js > /dev/null"
            }
        }
    },
    "tags": []
}
